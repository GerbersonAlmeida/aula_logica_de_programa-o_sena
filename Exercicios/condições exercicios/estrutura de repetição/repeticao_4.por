programa
{
	
	funcao inicio()
	{
		//4) Faça um programa que leia um número e mostre a contagem regressiva até 0, usando para.

		inteiro n
		
		escreva("Digite um número: ")
		leia(n)
		
		para(inteiro i = n;i > 0 ; i --) {
			escreva(i"\n)
		}
	}
	
}

